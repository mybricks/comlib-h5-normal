{
  "title": "数据表格",
  "namespace": "mybricks.taro.table",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.1",
  "runtime": "./runtime.tsx",
  "runtime.edit": "./edit/runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.png",
  "slots": [],
  "inputs": [
    {
      "id": "getDataSource",
      "title": "获取数据",
      "schema": {
        "type": "any"
      },
      "rels": ["afterGetDataSource"]
    },
    {
      "id": "setTableHeader",
      "title": "设置表头",
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "title": "列标题",
              "description": "列标题"
            },
            "dataIndex": {
              "type": "string",
              "title": "列序号",
              "description": "列序号"
            }
          }
        }
      },
      "rels": ["afterSetTableHeader"]
    },
    {
      "id": "setDataSource",
      "title": "设置数据",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "rels": ["afterSetDataSource"]
    },
    {
      "id": "addDataSource",
      "title": "添加数据",
      "desc": "在列表数据的末尾插入添加的数据",
      "schema": {
        "title": "列表数据",
        "type": "array",
        "items": {
          "title": "列项数据",
          "type": "any"
        }
      },
      "rels": ["afterAddDataSource"]
    },
    {
      "id": "noMore",
      "title": "切换到加载完毕",
      "desc": "切换到加载完毕状态，且不再触底加载",
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "onClickRow",
      "title": "单击行时",
      "schema": {
        "type": "object",
        "properties": {
          "text": {
            "type": "any"
          },
          "record": {
            "type": "object"
          },
          "index": {
            "type": "number"
          }
        }
      }
    },
    {
      "id": "onScrollLoad",
      "title": "当滚动加载时",
      "schema": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number"
          },
          "pageSize": {
            "type": "number"
          }
        }
      }
    },
    {
      "id": "afterGetDataSource",
      "title": "表格数据",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "afterSetDataSource",
      "title": "设置数据完成",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "afterAddDataSource",
      "title": "添加数据完成",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "afterSetTableHeader",
      "title": "设置表头完成",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  ],
  "connector": {
    "schema": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}
